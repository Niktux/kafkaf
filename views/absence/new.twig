{% extends 'layout.twig' %}

{% block content %}

<form method="post" submit="{{ path('absence.post') }}">
    <div class="form-group row">
      <label for="collaborateur" class="col-3 col-form-label">Collaborateur</label>
      <div class="col-9">
      <select class="custom-select mb-2 mr-sm-2 mb-sm-0" id="collaborateur" name="collaborateur">
      	{% for collaborateur in result.collaborateurs %}
        <option value="{{ collaborateur.uuid }}">{{ collaborateur }}</option>
        {% endfor %}
      </select>
      </div>
    </div>
    
    <div class="form-group row">
      <label for="from" class="col-3 col-form-label">Début du congé (inclus)</label>
      <div class="col-9">
        <input class="form-control" type="date" value="{{ "now"|date('Y-m-d') }}" id="from" name="from">
      </div>
    </div>
    <div class="form-group row">
      <label for="to" class="col-3 col-form-label">Fin du congé (inclus)</label>
      <div class="col-9">
        <input class="form-control" type="date" value="{{ "now"|date('Y-m-d') }}" id="to" name="to">
      </div>
    </div>
    <button type="submit" class="btn btn-primary">Envoyer la demande</button>
</form>

{% endblock %}
